<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="participantRegisterJob" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.huiyi.meeting.quartz.job.ParticipantRegisterJob" />
        <property name="jobDataMap">
            <map>
            </map>
        </property>
        <property name="durability" value="true" />
    </bean>
	<bean id="registerCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<property name="jobDetail" ref="participantRegisterJob"/>
		<!-- run every 10 minutes -->
		<property name="cronExpression" value="0 0/10 * * * ?"/>
	</bean>

	<bean id="ChqsScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="registerCronTrigger"/>
			</list>
		</property>
	</bean>
</beans>